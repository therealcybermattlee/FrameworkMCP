{
  "name": "framework-mcp",
  "version": "1.5.0",
  "description": "Pure Data Provider architecture serving authentic CIS Controls Framework data via MCP and HTTP API. Empowers LLMs with authoritative safeguards data for analysis. Supports Microsoft Copilot custom connectors and DigitalOcean App Services deployment.",
  "main": "dist/interfaces/http/http-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/interfaces/http/http-server.js",
    "start:mcp": "node dist/index.js",
    "start:http": "node dist/interfaces/http/http-server.js",
    "dev": "tsc && npm run start:mcp",
    "dev:http": "tsc && npm run start:http",
    "prepare": "npm run build"
  },
  "bin": {
    "framework-mcp": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "mcp",
    "cis-controls",
    "grc",
    "governance",
    "risk",
    "compliance",
    "vendor-analysis",
    "capability-assessment",
    "cybersecurity",
    "framework",
    "microsoft-copilot",
    "openapi",
    "swagger",
    "custom-connector",
    "http-api",
    "cloud-deployment"
  ],
  "author": "Matt Lee <cybermattlee@gmail.com> (https://github.com/therealcybermattlee)",
  "license": "CC-BY-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/therealcybermattlee/FrameworkMCP.git"
  },
  "bugs": {
    "url": "https://github.com/therealcybermattlee/FrameworkMCP/issues"
  },
  "homepage": "https://github.com/therealcybermattlee/FrameworkMCP#readme",
